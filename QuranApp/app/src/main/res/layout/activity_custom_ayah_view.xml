<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomAyahView">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:background="#1C1717"
        android:backgroundTint="#1C1919"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/ayahArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noorehuda"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="#F02DEAB5"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ayahTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/jameel_noori_nastaleeq"
            android:text="TextView"
            android:textColor="#FDFCFC"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>